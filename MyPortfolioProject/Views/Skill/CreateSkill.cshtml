@model Skill
@{
    ViewData["Title"] = "CreateSkill";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda Yetenek Sayfası</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yetenek Listesi</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Yetenek Adı</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Ne Kadar Biliyorum ?</label>
                            <input type="text" asp-for="Value" class="form-control" />
                            <br />                           
                            <button class="btn btn-primary">Yetenek Ekle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

